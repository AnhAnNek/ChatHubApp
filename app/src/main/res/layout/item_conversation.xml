<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="request"
            type="com.example.chat.conversations.Conversation" />

        <variable
            name="listener"
            type="com.example.chat.conversations.adapter.ConversationListener" />

        <variable
            name="position"
            type="int" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_background_primary"
        app:strokeWidth="0dp"
        app:cardCornerRadius="0dp"
        android:onClick="@{() -> listener.onItemClick(position)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_avatar"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:padding="@dimen/_4sdp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_image"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    app:loadImageWithUri="@{request.uri}"/>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/primary_sub_title_size"
                    tools:text="Van A"
                    android:text="@{request.conversationName}"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txv_recent_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txv_name"
                    android:ellipsize="marquee"
                    android:textColor="@color/color_text_secondary"
                    android:textSize="@dimen/primary_text_size"
                    tools:text="xin chÃ o"
                    android:text="@{request.lastMessage}"/>
            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
